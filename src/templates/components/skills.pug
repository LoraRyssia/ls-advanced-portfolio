script(type="text/x-template")#skills-list
  .values__widget-wrap
    ul.skills
      li.skills__item(v-for="skill in skills" :key="skill.skillsGroup")
        skillsRow(
          :skill="skill"
        )


script(type="text/x-template")#skills-row
  .skills-row
    h3.skills-row__title {{skill.skillsGroup}}
    ul.skills-row__list     
      li.skills-row__item(v-for="(skillPercent, skillName) in skill.skills")
        skill(
          :skillName = "skillName"
          :skillPercent = "skillPercent"
        )
              

script(type="text/x-template")#skill
  .skill
    svg(viewBox="0 0 100 100" preserveAspectRatio="none").skill__shape
      circle(
        r="40" cx="50" cy="50"
      ).skill__circle.skill__circle--under                                  
      circle(
        r="40" cx="50" cy="50" ref="color-circle" stroke="url(#gradient)" transform="rotate(180 50 50)" style="stroke-dashoffset: 175.7;"
      ).skill__circle.skill__circle--above
      linearGradient(x1="0%" y1="0%" x2="100%" y2="0" )#gradient
        stop(offset="0" stop-color="#5500f2")
        stop(offset="100%" stop-color="#8f00ef")
    .skill__title {{skillName}}