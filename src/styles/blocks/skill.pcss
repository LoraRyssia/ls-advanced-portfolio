.skill {
  position: relative;
  width: 166px;
  height: 166px;

  &__title {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    padding: 4px;
    font-size: 18px;
    font-weight: 700;
    text-align: center;
    color: rgba($text-color, 0.5);
  }

  &__circle {
    fill: transparent;
  }

  &__circle--under {
    stroke: #eaeaea;
    stroke-width: 5px;
  }

  &__circle--above {
    stroke-width: 12px;
    stroke-dasharray: 250;
  }
}
