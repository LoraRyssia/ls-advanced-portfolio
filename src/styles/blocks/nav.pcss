.nav {
  &__list {
    display: flex;
    align-items: center;
    
    @include tablets {
      flex-wrap: wrap;
    }
  }

  &__item {
    margin-right: 60px;

    &:last-child {
      margin-right: 0;
    }

    @include tablets {
      margin-bottom: 25px;
    }
  }

  &__link {
    text-decoration: none;
    white-space: nowrap;
  }

  &--color-white {
    color: #fff;
  }
}
