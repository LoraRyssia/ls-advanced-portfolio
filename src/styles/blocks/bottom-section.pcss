.bottom-section {
    padding-top: 255px;
    padding-bottom: 135px;
    background: url(../images/content/budda.png) no-repeat center;
    background-size: cover;

    &__container {
        padding-right: 26%;

        @include desktop {
           padding-right: 10%;
        }

        @media (max-width: 900px) {
           padding-right: 4%; 
        }

        @media (max-width: 830px) {
           padding-right: 0; 
        }
    }
}